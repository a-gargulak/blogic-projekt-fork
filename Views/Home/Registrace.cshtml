@{
    ViewData["Title"] = "Registrace";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">

<div class="container-fluid p-0">
    <div class="bg-image" style="background-image: url('https://ichef.bbci.co.uk/ace/standard/2560/cpsprodpb/5760/live/13359050-27eb-11ef-8748-d589b4996777.jpg'); height: 200px;">
        <div class="d-flex justify-content-center align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
            <div class="text-center text-white">
                <h1 class="mb-3">Registrace</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-register">

<label class="register-name">
  <span class="login-text">Jméno, příjmení</span>
  <input class="input login-input" required>
</label>

<label class="login-email">
  <span class="login-text">E-mail</span>
  <input class="input login-input" type="email" required>
</label>

<label class="register-password">
  <span class="login-text">Heslo</span>
  <input class="input login-input" type="password" required>
</label>

<label class="register-password">
  <span class="login-text">Znovu heslo</span>
  <input class="input login-input" type="password" required>
</label>

    <button class="button-register">Zaregistrovat se</button>

    <a class="login-link" href="">Přihlásit se</a>
</div>
